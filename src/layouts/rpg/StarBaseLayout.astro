---
import BaseLayout from '../BaseLayout.astro';
import '@/styles/rpg/pctable.scss'
import '@/styles/rpg/star.scss'

export interface Props {
  title: string;
  description: string;
  permalink: string;
  current?: string;
}
const { title, description, permalink, current } = Astro.props;
---

<BaseLayout title={title} description={description} permalink={permalink} current={current ? current : 'rpg'}>
  <slot/>
</BaseLayout>


<script>
  import { setupShakyText } from "@/utils/shakyText";
  setupShakyText();
</script>
