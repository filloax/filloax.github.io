---
import CampaignIndex from '@/components/rpg/CampaignIndex.astro'
import StarBaseLayout from "@/layouts/rpg/StarBaseLayout.astro";

const url = Astro.url.pathname;
const title = "La Stella Nera";
const description = "Indice della campagna Stella Nera - La compagnia del Pomello";
const permalink = `${Astro.site.href}${url}`;

const files = await Astro.glob('./*');
const extraElements = [
	{href: "./star/sessioni", name: "Riassunti sessioni", order: 0}
]
---

<StarBaseLayout title={title} description={description} permalink={permalink}>
	<h1>{title}</h1>

	<img src="https://i.imgur.com/z7FdwdU.jpg"/>

	<h5>La compagnia del Pomello</h5>

	<CampaignIndex files={files} staticElements={extraElements}/>

	<h2>Timeline</h2>

	<p>Anni in calendario <a href="https://forgottenrealms.fandom.com/wiki/Marking_the_years">DR</a></p>

